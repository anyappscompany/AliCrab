<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_activity_navigation"
    app:startDestination="@id/topFragment">

    <fragment
        android:id="@+id/topFragment"
        android:name="ua.com.anyapps.alicrab.ui.fragments.TopFragment"
        android:label="fragment_topn"
        tools:layout="@layout/fragment_top" >
        <!--<argument
            android:name="act"
            app:argType="integer"
            android:defaultValue="0" />-->
        <action
            android:id="@+id/action_topFragment_to_historyFragment"
            app:destination="@id/historyFragment" />
    </fragment>
    <fragment
        android:id="@+id/historyFragment"
        android:name="ua.com.anyapps.alicrab.ui.fragments.HistoryFragment"
        android:label="fragment_history"
        tools:layout="@layout/fragment_history" >
        <action
            android:id="@+id/action_historyFragment_to_settingsFragment"
            app:destination="@id/settingsFragment" />
    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="ua.com.anyapps.alicrab.ui.fragments.SettingsFragment"
        android:label="fragment_history"
        tools:layout="@layout/fragment_settings" />
</navigation>